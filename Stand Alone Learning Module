from chatterbot import ChatBot

print "This program will help SAAI learn! Type your phrase and off it goes!"

userInput = raw_input("Type a phrase:")

bot = ChatBot("No Output",
    storage_adapter="chatterbot.adapters.storage.JsonDatabaseAdapter",
    logic_adapter="chatterbot.adapters.logic.ClosestMatchAdapter",
    io_adapter="chatterbot.adapters.io.NoOutputAdapter",
    database="./database.db")
a = 1
while a == 1:
    botoutput = bot.get_response(userInput)
    print botoutput
    userInput = bot.get_response(botoutput)
    bot.train("chatterbot.corpus.english.conversations")
